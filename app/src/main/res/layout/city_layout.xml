<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/app_backgroung">

    <android.support.constraint.Guideline android:id="@+id/city_gd_spinners_top" app:layout_constraintGuide_percent=".05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:id="@+id/city_gd_spinners_bottom" app:layout_constraintGuide_percent=".15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <android.support.constraint.Guideline android:id="@+id/city_gd_spinners_clmn1_left" app:layout_constraintGuide_percent=".1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <android.support.constraint.Guideline android:id="@+id/city_gd_spinners_clmn1_right" app:layout_constraintGuide_percent=".47"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <android.support.constraint.Guideline android:id="@+id/city_gd_spinners_clmn2_left" app:layout_constraintGuide_percent=".53"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <android.support.constraint.Guideline android:id="@+id/city_gd_spinners_clmn2_right" app:layout_constraintGuide_percent=".9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/city_gd_spinners_top"
        app:layout_constraintBottom_toTopOf="@id/city_gd_spinners_bottom"
        app:layout_constraintLeft_toRightOf="@id/city_gd_spinners_clmn1_left"
        app:layout_constraintRight_toLeftOf="@id/city_gd_spinners_clmn1_right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day"
            android:textColor="@color/yellow"
            android:textSize="18sp"/>
        <Spinner android:id="@+id/city_sp_day"
            android:layout_width="0dp"
            android:layout_height="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/city_gd_spinners_top"
        app:layout_constraintBottom_toTopOf="@id/city_gd_spinners_bottom"
        app:layout_constraintLeft_toRightOf="@id/city_gd_spinners_clmn2_left"
        app:layout_constraintRight_toLeftOf="@id/city_gd_spinners_clmn2_right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Period"
            android:textColor="@color/yellow"
            android:textSize="18sp"/>
        <Spinner android:id="@+id/city_sp_periods"
            android:layout_width="0dp"
            android:layout_height="0dp" />
    </LinearLayout>

    <android.support.constraint.Guideline android:id="@+id/city_gd_row1" app:layout_constraintGuide_percent=".2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#10FFFFFF"
        android:padding="20dp"
        app:layout_constraintLeft_toRightOf="@id/city_gd_spinners_clmn1_left"
        app:layout_constraintRight_toLeftOf="@id/city_gd_spinners_clmn2_right"
        app:layout_constraintTop_toBottomOf="@id/city_gd_row1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature   "
                android:textColor="@color/yellow"
                android:textSize="15sp" />
            <TextView android:id="@+id/city_txtv_tmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="15sp"
                android:textColor="@color/yellow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" C"
                android:textSize="15sp"
                android:textColor="@color/yellow"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="     "
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min   "
                android:textColor="@color/yellow"
                android:textSize="15sp" />
            <TextView android:id="@+id/city_txtv_tmp_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="15sp"
                android:textColor="@color/yellow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" C"
                android:textSize="15sp"
                android:textColor="@color/yellow"/>
        </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="     "
                android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max   "
            android:textColor="@color/yellow"
            android:textSize="15sp" />
        <TextView android:id="@+id/city_txtv_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="15sp"
            android:textColor="@color/yellow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" C"
            android:textSize="15sp"
            android:textColor="@color/yellow"/>
    </LinearLayout>

    </LinearLayout>

    <android.support.constraint.Guideline android:id="@+id/city_gd_row2" app:layout_constraintGuide_percent=".42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#10FFFFFF"
        android:padding="20dp"
        app:layout_constraintLeft_toRightOf="@id/city_gd_spinners_clmn1_left"
        app:layout_constraintRight_toLeftOf="@id/city_gd_spinners_clmn2_right"
        app:layout_constraintTop_toBottomOf="@id/city_gd_row2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wind "
            android:textColor="@color/yellow"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="     "
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed   "
                android:textColor="@color/yellow"
                android:textSize="15sp" />
            <TextView android:id="@+id/city_txtv_windspeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="15sp"
                android:textColor="@color/yellow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" m/s"
                android:textSize="15sp"
                android:textColor="@color/yellow"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="     "
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Degree   "
                android:textColor="@color/yellow"
                android:textSize="15sp" />
            <TextView android:id="@+id/city_txtv_winddegree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="15sp"
                android:textColor="@color/yellow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="15sp"
                android:textColor="@color/yellow"/>
        </LinearLayout>

    </LinearLayout>

    <android.support.constraint.Guideline android:id="@+id/city_gd_row3" app:layout_constraintGuide_percent=".65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#10FFFFFF"
        android:padding="20dp"
        app:layout_constraintLeft_toRightOf="@id/city_gd_spinners_clmn1_left"
        app:layout_constraintRight_toLeftOf="@id/city_gd_spinners_clmn2_right"
        app:layout_constraintTop_toBottomOf="@id/city_gd_row3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity   "
            android:textColor="@color/yellow"
            android:textSize="15sp" />
        <TextView android:id="@+id/city_txtv_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="15sp"
            android:textColor="@color/yellow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" %"
            android:textSize="15sp"
            android:textColor="@color/yellow"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>